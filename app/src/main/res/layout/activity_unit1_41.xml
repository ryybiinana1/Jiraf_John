<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit14">


    <Button
        android:id="@+id/zvuk_nam_nazvanie"
        android:layout_width="379dp"
        android:layout_height="95dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#ffd700"
        android:text="Practice according to Unit 1"
        android:textColor="#4C4C4C"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zvuk_num_nomer"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="4/5"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zvuk_nam_nazvanie" />

    <TextView
        android:id="@+id/zvuk_num_zadanie"
        android:layout_width="304dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:text="Выбери правильный ответ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zvuk_num_nomer" />

    <TextView
        android:id="@+id/zvuk_num_zadanie_podrobno"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:text="Что сказал жирафик Джон?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zvuk_num_zadanie" />

    <ImageView
        android:id="@+id/image_smile"
        android:layout_width="355dp"
        android:layout_height="179dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zvuk_num_zadanie_podrobno"
        app:srcCompat="@drawable/smile_people" />


    <Button
        android:id="@+id/playButton"
        android:layout_width="93dp"
        android:layout_height="39dp"
        android:layout_marginTop="492dp"
        android:onClick="play"
        android:text="Play"
        android:textColor="#4C4C4C"
        android:backgroundTint="#9C9C9C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pauseButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="93dp"
        android:layout_height="39dp"
        android:layout_marginTop="492dp"
        android:backgroundTint="#9C9C9C"
        android:onClick="pause"
        android:text="Pause"
        android:textColor="#4C4C4C"
        app:layout_constraintLeft_toRightOf="@id/playButton"
        app:layout_constraintRight_toLeftOf="@id/stopButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="93dp"
        android:layout_height="39dp"
        android:layout_marginTop="492dp"
        android:onClick="stop"
        android:text="Stop"
        android:textColor="#4C4C4C"
        android:backgroundTint="#9C9C9C"
        app:layout_constraintLeft_toRightOf="@id/pauseButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first_answer"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DFD9D9"
        android:text="Steve is ill. He is in bed"
        android:textColor="#8E8B8B"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pauseButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_second_answer"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:backgroundTint="#DFD9D9"
        android:text="Steve is ill. His in bed"
        android:textColor="#8E8B8B"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_first_answer" />

    <Button
        android:id="@+id/button_next_to5"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#9C9C9C"
        android:text="К следующему вопросу"
        android:textColor="#4C4C4C"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>