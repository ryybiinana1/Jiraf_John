<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UNIT1_5">

    <Button
        android:id="@+id/button1_unit1_5"
        android:layout_width="379dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#ffd700"
        android:text="Practice according to Unit 1"
        android:textColor="#4C4C4C"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1_unit1_5"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:text="5/5"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1_unit1_5" />

    <TextView
        android:id="@+id/textView2_unit1_5"
        android:layout_width="304dp"
        android:layout_height="34dp"
        android:layout_marginTop="84dp"
        android:text="Произнесите слово"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1_unit1_5"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textView3_unit1_1"
        android:layout_width="297dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:text="Beauty"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_unit1_5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button6_unit1_1"
        android:layout_width="287dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:backgroundTint="#DFD9D9"
        android:text="Нажмите для записи"
        android:textColor="#8E8B8B"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3_unit1_1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2_unit1_1"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#9C9C9C"
        android:text="К следующему вопросу"
        android:textColor="#4C4C4C"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="45dp"
        android:layout_height="54dp"
        android:layout_marginBottom="304dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/play" />


</androidx.constraintlayout.widget.ConstraintLayout>